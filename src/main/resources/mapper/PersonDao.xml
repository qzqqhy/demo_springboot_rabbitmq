<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liubo.demo.rabbitmq.person.dao.PersonDao">
    <insert id="addPerson" parameterType="com.liubo.demo.rabbitmq.person.model.PersonDO">
      INSERT INTO person(userId,userName,age) VALUES
      (#{userId},#{userName},#{age})
    </insert>

    <delete id="removePerson" parameterType="string">
      DELETE FROM  person WHERE id=#{id}

    </delete>
    <update id="modifyPerson" parameterType="com.liubo.demo.rabbitmq.person.model.PersonDO">
        UPDATE person
        <set>
            <if test="userName!=null and userName!=''">
                userName=#{userName},
            </if>
            <if test="age!=null">
                age=#{age},
            </if>

        </set>

    </update>

    <select id="getPerson" resultType="com.liubo.demo.rabbitmq.person.model.PersonDO">
      SELECT * FROM person WHERE id=#{id}

    </select>

    <select id="queryPersonList" parameterType="com.liubo.demo.rabbitmq.person.model.PersonDO"
            resultType="com.liubo.demo.rabbitmq.person.model.PersonDO">
        SELECT * FROM person
        <where>
            <if test="id!=null and id !=''">
                and id=#{id}
            </if>
            <if test="userName!=null and userName!=''">
                and userName like concat(#{userName},'%')
            </if>
            <if test="age!=null">
                and age=#{age}
            </if>

        </where>

    </select>
</mapper>